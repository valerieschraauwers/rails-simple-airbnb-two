<div class="container mt-3">

  <h1>All our flats</h1>

  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-xs-12 col-md-4">
      <div class="flat-card">
          <div class="flat-card-image" style="background-image: url('<%= flat.url %>')"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><strong><%= flat.name %></strong></h4>
            </div>
            <h5><%= flat.address %></h5>
            <br>
            <div class="flex">
              <div class="flex">
                <i class="fas fa-users"></i><span><p><%= flat.number_of_guests %></p></span>
              </div>
              <div class="flex ml-3">
               <i class="fas fa-euro-sign"></i><p><%= flat.price_per_night %></p>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to "More info", flat_path(flat) %>
            <a href="#" class="ml-3 text-warning">Edit</a>
            <a href="#" class="ml-3 text-danger">Remove</a>
          </div>
        </div>
    </div>
    <% end %>
  </div>

  </div>
